<UserControl x:Class="SmilePhone.UI.UI_BaoCao"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmilePhone.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="4">
            <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}" Checked="rdbStock_Checked" Margin="4" IsChecked="False" Content="Báo cáo tồn kho" />
            <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}" Checked="rdbIncome_Checked" Margin="4" IsChecked="False" Content="Báo cáo thu chi" />
        </StackPanel>
        <Grid x:Name="GridReport" Grid.Row="1" Background="WhiteSmoke"/>
    </Grid>
</UserControl>
